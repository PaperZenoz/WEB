<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
    <title>{{ page.title }}</title>
    {% include "./head.njk" %}
</head>
<body class="background--{{ page.background }}">

{% set  _ = 'header' %}
<div class="{{ _ }}">
    <div class="container container--lg">
        <div class="{{ _ }}__wrap">
            <a href="/" class="{{ _ }}__logo img img--contain">
                <img src="images/{{ _ }}/logo.png" alt=""/>
            </a>
            <div class="{{ _ }}__nav">
                {% set  list = [
                    'История модели',
                    'Школа моделей',
                    'Вакансии',
                    'Галерея',
                    'Контакты'] %}

                {% for item in list %}
                    <a href="#" class="{{ _ }}__nav-item">
                        {{ item }}
                    </a>
                {% endfor %}


            </div>


            <a href="#" class="{{ _ }}__telephone">
                +7 913 717 22 92
            </a>

            <div class="{{_}}__burger">
                <span></span>
                <span></span>
                <span></span>

            </div>
        </div>
    </div>

</div>





